

/*首页样式*/
.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 100%;
}

.banner {
  width: 100%;
}


.btn-group {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 30rpx;
  /* margin-top: 30rpx;
  margin-left:30rpx;
  width:250rpx */
}

.btn {
  display: flex;
  flex-basis: 38%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* width: 120rpx;
  height: 250rpx; */
   border-radius: 20rpx; 
  background-color: #c5d9f0;
  background-image: linear-gradient(to right, #d3eaf1, #8bb8e4);
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
  font-size: 16px;
  font-weight: bold;
  /* padding: 10px 20px; */
  margin: 30rpx;
}

.btn image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}


.btn text {
  font-size: 32rpx;
  color: #333333;
}

.knowledge {
  width: 100%;
  height: 400rpx;
  margin-top: 20rpx;
}

.knowledge swiper-item image {
  width: 100%;
  height: 400rpx;
}

.contact {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: #F9A11F;
  box-shadow: 0px 5rpx 5rpx #888888;
}

.contact text {
  font-size: 28rpx;
  color: #ffffff;
}

.btn-bottom{
  font-family:cursive;
  font-size:large;
  bottom:0;
  position:fixed;
  width:100%;
  left:200rpx;
  background-color: mediumaquamarine;
}

.bg{
  position:fixed;
  top:0;
  left:0;
  background:url('https://636c-cloud1-3g9yux0wa2b2e8c4-1317079251.tcb.qcloud.la/1679390898751.jpeg?sign=27a6c188d591c5c70be2b67710c1b61d&t=1679412582')
  no-repeat #000;
  background-size: cover;
  width:100%;
  height:100%;
  z-index:-1;
   animation-name: fade-in;
  animation-duration: 1.4s;
}

bg-img{
  width:100%;
  height:100%;
}
@keyframes fade-in {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 0.8;
  }
}

.knowledge-title{
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  font-style: italic;
}