/* 帖子详情页面样式 */
.post-detail {
  padding: 20rpx;
}

/* 帖子信息样式 */
.post-header {
  margin-bottom: 20rpx;
}

.post-title {
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1.5;
  margin-bottom: 10rpx;
}

.post-meta {
  font-size: 24rpx;
  color: #999;
  display: flex;
  flex-wrap: wrap;
}

.post-meta text {
  margin-right: 20rpx;
}

/* 帖子内容样式 */
.post-content {
  margin-bottom: 20rpx;
}

/* 评论区样式 */
.comments {
  margin-top: 20rpx;
}

.comments-header {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.comment-item {
  margin-bottom: 10rpx;
}

.comment-author {
  font-weight: bold;
  margin-right: 10rpx;
}

.comment-time {
  color: #999;
  margin-right: 10rpx;
}
